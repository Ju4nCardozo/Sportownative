<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/editTextTituloDatosUsuario"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat"
            android:minHeight="48dp"
            android:text="Perfil del usuario"
            android:textColor="@android:color/black"
            android:textFontWeight="1000"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/editTextNombreCompletoPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Completo" />

        <EditText
            android:id="@+id/editTextEdadPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad" />

        <EditText
            android:id="@+id/editTextPesoPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso" />

        <EditText
            android:id="@+id/editTextAlturaPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Altura" />

        <TextView
            android:id="@+id/editTextRiesgosPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="¿Presenta usted alguno de estos factores de riesgo?"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/checkBoxCardiacoPerfil"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Cardiaco" />

        <CheckBox
            android:id="@+id/checkBoxAsmaPerfil"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Asma" />

        <CheckBox
            android:id="@+id/checkBoxHipertensionPerfil"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Hipertensión" />

        <CheckBox
            android:id="@+id/checkBoxDiabetesPerfil"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Diabetes" />

        <CheckBox
            android:id="@+id/checkBoxCancerPerfil"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Cáncer" />

        <CheckBox
            android:id="@+id/checkBoxEpilepsiaPerfil"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Epilepsia" />

        <Button
            android:id="@+id/buttonActualizarPerfil"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Actualizar" />

        <Button
            android:id="@+id/buttonAtras"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Atrás" />

        <Button
            android:id="@+id/buttonCerrarSession"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Cerrar sesión" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>