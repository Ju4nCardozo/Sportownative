<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/editTextTituloDatosUsuario"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat"
            android:minHeight="48dp"
            android:text="Datos del usuario"
            android:textColor="@android:color/black"
            android:textFontWeight="1000"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/editTextNombreCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Completo" />

        <EditText
            android:id="@+id/editTextEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad" />

        <EditText
            android:id="@+id/editTextPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso" />

        <EditText
            android:id="@+id/editTextAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Altura" />

        <TextView
            android:id="@+id/editTextRiesgos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="¿Presenta usted alguno de estos factores de riesgo?"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/checkBoxCardiaco"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Cardiaco" />

        <CheckBox
            android:id="@+id/checkBoxAsma"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Asma" />

        <CheckBox
            android:id="@+id/checkBoxHipertension"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Hipertensión" />

        <CheckBox
            android:id="@+id/checkBoxDiabetes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Diabetes" />

        <CheckBox
            android:id="@+id/checkBoxCancer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Cáncer" />

        <CheckBox
            android:id="@+id/checkBoxEpilepsia"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Epilepsia" />

        <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Guardar" />

        <Button
            android:id="@+id/buttonActualizar"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Actualzar" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>